@model CustomerDetailsViewModel

<div class="container py-4">
    <h2 class="text-center mb-4">Customer Details</h2>

    <div class="row mb-3">
        <div class="col-md-4">
            <div class="form-group">
                <label>Customer Number</label>
                <input type="text" class="form-control" value="@Model.CustomerNo" readonly />
            </div>
        </div>
        <div class="col-md-4">
            <div class="form-group">
                <label>Customer Name</label>
                <input type="text" class="form-control" value="@Model.CustomerName" readonly />
            </div>
        </div>
        <div class="col-md-4">
            <div class="form-group">
                <label>Customer Type</label>
                <input type="text" class="form-control" value="@Model.CustomerTypeName" readonly />
            </div>
        </div>
    </div>

    <div class="row mb-10">
        <div class="col-md-4">
            <div class="form-group">
                <label>Customer Address</label>
                <input type="text" class="form-control" value="@Model.CustomerAddress" readonly />
            </div>
        </div>
        <div class="col-md-4">
            <div class="form-group">
                <label asp-for="BusinessStart">BusinessStart</label>
                <input asp-for="BusinessStart" class="form-control" type="date" />
                <span asp-validation-for="BusinessStart" class="text-danger"></span>
            </div>
        </div>
        <div class="col-md-4">
            <div class="form-group">
                <label>Credit Limit</label>
                <input type="text" class="form-control" value="@Model.CreditLimit" readonly />
            </div>
        </div>
    </div>

    <hr/>

    <!-- Delivery Addresses -->
    <div class="mb-4">
        <h4>Delivery Addresses</h4>
        @if (Model.Addresseslo != null && Model.Addresseslo.Any())
        {
            <table class="table table-bordered table-striped">
                <thead>
                    <tr>
                        <th>AddressName</th>
                        <th>ContactPerson</th>
                        <th>PhoneNumber</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var address in Model.Addresseslo)
                    { 
                        <tr>
                            <td>@address.AddressName</td>
                            <td>@address.ContactPerson</td>
                            <td>@address.PhoneNumber</td>
                        </tr>
                    }
                </tbody>
            </table>
           @*  <ul class="list-group">
                @foreach (var address in Model.Addresseslo)
                {
                    <li class="list-group-item">
                        @address.AddressName
                    </li>
                }
            </ul> *@
        }
        else
        {
            <p>No delivery addresses found.</p>
        }
    </div>

    <!-- Back Button -->
    <div class="text-center">
        <a asp-action="Index" class="btn btn-secondary px-4">Back to List</a>
    </div>
</div>

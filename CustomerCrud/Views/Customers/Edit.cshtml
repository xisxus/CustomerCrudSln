                $('#addressList').append(addressHtml);
                addressCounter++;
            });

            // Remove address dynamically
            $(document).on('click', '.remove-address', function () {
                $(this).closest('.address-item').remove();
            });

            // Show Customer Type Modal
           $('#addCustomerTypeBtn').click(function () {
            // Clear existing list
            $('#customerTypeList').empty();

            // Show modal
            $('#customerTypeModal').modal('show');

            // Fetch customer types via AJAX
            $.ajax({
                url: '@Url.Action("GetCustomerTypes", "Customers")', // Adjust the action and controller
                type: 'GET',
                success: function (data) {
                    if (data && data.length > 0) {
                        // Populate the list
                        data.forEach(function (type) {
                            $('#customerTypeList').append(`
                                <li class="list-group-item d-flex justify-content-between align-items-center">
                                    ${type.customerTypeName}
                                    <input type="checkbox" class="select-customer-type" value="${type.customerTypeId}" />
                                </li>
                            `);
                        });
                    } else {
                        $('#customerTypeList').append(`
                            <li class="list-group-item text-center text-muted">
                                No customer types available.
                            </li>
                        `);
                    }
                },
                error: function () {
                    alert('Error fetching customer types.');
                }
            });
        });

        // Ensure only one checkbox is selected at a time
        $(document).on('change', '.select-customer-type', function () {
            const selectedCheckbox = $(this);

            // Uncheck other checkboxes
            $('.select-customer-type').not(this).prop('checked', false);
        });

        // Save the selected or newly created customer type
        $('#saveCustomerTypeBtn').click(function () {
            const selectedType = $('.select-customer-type:checked').val();
            const selectedTypeName = $('.select-customer-type:checked')
                .closest('li')
                .text()
                .trim();
            const newTypeName = $('#newCustomerTypeName').val().trim();

            if (selectedType) {
                // Update the dropdown with the selected type
                $('#CustomerTypeId').val(selectedType);
                $('#CustomerTypeId option:selected').text(selectedTypeName);

                // Close the modal
                $('#customerTypeModal').modal('hide');
            } else if (newTypeName) {
                // Create a new customer type
                $.ajax({
                    url: '@Url.Action("CreateCustomerType", "Customers")',
                    type: 'POST',
                    data: { customerTypeName: newTypeName },
                    success: function (response) {
                        if (response.success) {
                            // Add the new type to the dropdown and select it
                            $('#CustomerTypeId').append(
                                `<option value="${response.customerTypeId}" selected>${newTypeName}</option>`
                            );

                            // Close the modal and reset the input field
                            $('#customerTypeModal').modal('hide');
                            $('#newCustomerTypeName').val('');
                        } else {
                            alert('Error creating new customer type.');
                        }
                    },
                    error: function () {
                        alert('Error creating new customer type.');
                    }
                });
            } else {
                alert('Please select or create a customer type.');
            }
        });

            // Handle form submission with AJAX and redirect on success
                    $('#customerForm').submit(function (event) {
            event.preventDefault();  // Prevent form from submitting normally

            $.ajax({
                url: '@Url.Action("Edit", "Customers")',  // Ensure you use the correct controller action
                type: 'POST',
                data: $(this).serialize(),
                success: function (response) {
                    if (response.success) {
                        // Success: Redirect to the Index page
                        window.location.href = '@Url.Action("Index", "Customers")';  // Adjust controller name if needed
                    } else {
                        // Failure: Show validation error message
                        $('#validationMessage').removeClass('text-success').addClass('text-danger');
                        $('#validationMessage').text(response.message);
                    }
                },
                error: function () {
                    alert('Error while submitting the form.');
                }
            });
        });

        });
    </script>
